<Page x:Class="Andreeva_TZv2.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" Width="400" Height="280"
      Title="Registration"
>

    <Grid>
        <Border Grid.Row="1" Grid.Column="1" Margin="0,10,10,10" Background = "#F5DEB3" BorderBrush="Silver" CornerRadius="13">
            <Grid> 
                <TextBox x:Name="PhoneClient" Style="{DynamicResource TextBoxK}" Height="35" Margin="69,95,69,130" Text="Введите телефон клиента" TouchEnter="TextBox_TouchEnter" LostFocus="PhoneClient_LostFocus" GotFocus="PhoneClient_GotFocus"/>
                <TextBox x:Name ="NameBox" Style="{DynamicResource TextBoxK}" Height="37" Margin="86,42,86,181" Text="Введите имя клиента" GotFocus="NameBox_GotFocus" LostFocus="NameBox_LostFocus"/>
                <TextBox x:Name="CodePOD" Margin="101,147,101,82" Style="{DynamicResource TextBoxK}" TouchEnter="TextBox_TouchEnter" Text="Код подтверждения"/>

                <Button Style="{DynamicResource ButtonK}" Margin="136,213,136,21" Content="Зарегистрировать" Click="Button_Click"/>

            </Grid>
        </Border>
    </Grid>
</Page>