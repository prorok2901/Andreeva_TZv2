<Page x:Class="Andreeva_TZv2.Borrow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" Width="400" Height="280"
      Title="Borrow"
      
>

    <Grid>
        <Border Grid.Row="1" Grid.Column="1" Margin="0,10,10,10" Background = "#F5DEB3" BorderBrush="Silver" CornerRadius="13">
            <Grid>

                <TextBlock Text="Логин клиента: " RenderTransformOrigin="0.515,0.486" Margin="88,10,195,222" FontSize="14"/>
                <ComboBox IsReadOnly="True" Template="{DynamicResource ComboBoxPeredelka}" HorizontalAlignment="Left" Margin="195,8,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="5.223,1.388" Height="26" Name="loginClient" FontSize="14"/>
                <Button Style="{DynamicResource ButtonK}" Content="Зарегистрировать" Margin="143,43,133,191" Click="Button_Click_2"/>
                <Button Style="{DynamicResource ButtonK}" Content="Информация о номере" Margin="242,153,10,75" Click="Button_Click_1"/>
                <TextBlock Text="Номер в отеле: " Margin="97,161,196,75" FontSize="14"/>
                <TextBox x:Name="NumberRoomHotel" Background="#F5DEB3" BorderThickness="0,0,0,0"  Margin="201,154,154,76" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>

                <TextBox Text="Дата заселения" x:Name="DataZaseleniya" Style="{DynamicResource TextBoxK}" HorizontalAlignment="Left" Height="27" Margin="32,104,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="137" LostFocus="TextBox_LostFocus_1" GotFocus="TextBox_GotFocus_1" FontSize="14"/>

                <TextBox Text="Кол-во дней:" x:Name="CountDay" Style="{DynamicResource TextBoxK}" HorizontalAlignment="Left" Height="30" Margin="218,101,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="133" LostFocus="TextBox_LostFocus" GotFocus="TextBox_GotFocus" FontSize="14"/>
                <TextBox Text="Код подтверждения" x:Name="CodePOD" Style="{DynamicResource TextBoxK}" HorizontalAlignment="Left" Height="28" Margin="126,190,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" GotFocus="TextBox_GotFocus_2" LostFocus="TextBox_LostFocus_2" FontSize="14"/>

                <Button Style="{DynamicResource ButtonK}" Margin="151,223,141,10" Content="Забронировать" Click="Button_Click"/>

            </Grid>
        </Border>
    </Grid>
</Page>
